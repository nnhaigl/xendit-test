{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": false,
    "incremental": true,
    "preserveSymlinks": true,
    "lib": ["es2019"],
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["../node_modules", "./**/*.spec.ts", "dist"]
}